		div1.className = "small-12 medium-12 columns";
		div2.className = "small-12 medium-12 columns";
		div3.className = "small-12 medium-12 columns";
	}
	
	// enquire.js helps us query
	enquire.register("screen and (max-width: 40em)", {
		setup: function() {
			setupTransitions();	
		}, 
		match : function() {
			removeTransitions();
			var splashes = $('.splash');
			for (var i = 0; i < splashes.length; i++) {
				var imgs = splashes[i].getElementsByTagName('img');
				for (var j = 0; j < imgs.length; j++) {
					if (imgs[j].id == "app") {
						imgs[j].style.maxHeight = ($('.splash').height() * .33) + "px";
						imgs[j].parentNode.style.textAlign = "center";
						imgs[j].parentNode.style.marginBottom = "2em";
					}
						
				} // end images
			} // end splashes 
		}, // end match
		unmatch : function() {
			setupTransitions();
		}
	});
</script>



