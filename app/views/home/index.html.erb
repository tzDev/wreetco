<!-- scripts to setup scroll animaions and 'fix' absolutely positioned content overflow -->
<script>
	if ((/iPhone|iPad|iPod/i).test(navigator.userAgent || navigator.vendor || window.opera)) {
		var div1 = document.getElementById("valign1");
		var div2 = document.getElementById("valign2");	
