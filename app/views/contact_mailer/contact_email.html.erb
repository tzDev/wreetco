<!doctype html>
<html>
<head>
	<link href='http://fonts.googleapis.com/css?family=Roboto:400,700' rel='stylesheet' type='text/css' />
	<style>
		* {
			margin: 0;
			padding: 0;
		}
		
		html, body {
			font-family: Roboto, sans-serif;
			color: #ddd;
			background-color: #222;
		}
		
		.mail {
			padding: 1em;	
		}
		
		p {
			margin: .5em 0;	
		}
	</style>
</head>
<body>
	<div class="mail">
		<h1><%= @inquiry[:category] %></h1>
		<p class="inquirer">
			<%= @inquiry[:inquirer] %>
			<br />
			<%= @inquiry[:submitted] %>
		</p>
		<p class="message">
			<%= @inquiry[:message] %>
		</p>
	</div>
</body>
</html>
