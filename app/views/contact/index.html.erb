<div class="row" style="min-height: 80vh;">
	<div class="columns medium-5 small-12">
		<h1>Contact</h1>
		<p>
			Ready to get started, or do you just have a few questions? 
		</p>
		<p>
			Please fill out the form and let us know how we may help you!
			We'll be sure to get back to you within 1-2 business days.
		</p>
		<p>
			If this request is urgent or you need assistance immediately, 
			please email us at info@wreet.co and we'll get in touch with you as soon 
			as possible. 
		</p>
	</div><!-- end left -->
	<!-- right column -->
	<div class="columns medium-7 small-12">
		<div class="contact_form">
			<%= form_for :contact do |f| %>
				<div class="row">
					<div class="small-12 medium-6 columns">
						<%= f.label :first_name %>
						<%= f.text_field :first_name, :placeholder => 'First name' %>
					</div>
					<div class="small-12 medium-6 columns">
						<%= f.label :last_name %>
						<%= f.text_field :last_name, :placeholder => 'Last name' %>			
					</div>
				</div>
				<!-- next row -->
				<div class="row">
					<div class="small-12 columns">
						<%= f.label :email %>
						<%= f.text_field :email, :placeholder => 'Email' %>
					</div>
				</div>
				<!-- next row -->
				<div class="row">
					<div class="small-12 column">
						<%= f.label :subject %>
						<%= select_tag("contact[subject]", options_for_select(['---','Web Development','App Development','Software Development','Consulting','Support','General/Other'])) %>
					</div>
				</div>
				<!-- next row -->
				<div class="row">
					<div class="small-12 columns">
						<%= f.label :message %>
						<%= f.text_area :message, :placeholder => 'Message', :rows => 5 %>
					</div>
				</div>
				<!-- submit row -->
				<div class="row">
					<div class="small-12 columns text-center">
						<!--<input type="submit" class="button success" value="Send" />-->
						<%= submit_tag "Send", :class => "button success" %>
						
					</div>
				</div>
			<% end %>
		</div><!-- end contact form -->
	</div><!-- end right column -->
</div><!-- end row -->






